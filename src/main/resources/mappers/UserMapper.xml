<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="job.mapper.UserMapper">
    <select id="findUserByEmail" resultType="job.entity.User" parameterType="java.lang.String">
        SELECT * from user where email = #{email}
    </select>

    <select id="getPersonUser" resultType="job.entity.PersonUser" parameterType="java.lang.Integer">
        select * from person_user pu
        join user u on pu.user_id = u.id
        where u.id = #{id}
    </select>

    <select id="selectByPageAndCondition" resultType="job.entity.User"
            parameterType="job.entity.User">
        SELECT * FROM user where 1=1
        <if test="user!=null and user.email!=null">
            and email like concat('%',#{user.email},'%')
        </if>
        LIMIT #{pageStart},#{pageSize}
    </select>

    <select id="selectCount" resultType="java.lang.Integer">
        SELECT count(*) FROM user
    </select>

    <update id="updateState" parameterType="java.lang.Integer">
        UPDATE user SET state = #{state}
        WHERE id = #{id}
    </update>

</mapper>
