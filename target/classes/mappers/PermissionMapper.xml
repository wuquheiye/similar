<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="swtech.pageDesignControl.mapper.PermissionMapper">
    <select id="getPermissionbyRoleName" resultType="java.lang.String" parameterType="java.lang.String" >
        SELECT pname from role r
        join role_permission rp on rp.rid = r.rid
        join permission p on rp.pid = p.pid
        where r.rrole_name =  #{roleName}
    </select>

    <select id="selectByPageAndCondition" resultType="swtech.pageDesignControl.entity.Permission"
            parameterType="swtech.pageDesignControl.entity.Permission">
        SELECT * FROM permission where 1=1
        <if test="permission!=null and permission.pname!=''">
            and pname like concat('%',#{permission.pname},'%')
        </if>
        LIMIT #{pageStart},#{pageSize}
    </select>

    <select id="selectCount" resultType="int">
        SELECT count(*) FROM permission
    </select>

    <select id="selecGtrandfather" resultType="swtech.pageDesignControl.common.vo.PermissionVo">
        SELECT * FROM permission where ppid = -1
    </select>

    <select id="selectChild" resultType="swtech.pageDesignControl.common.vo.PermissionVo" parameterType="java.lang.Integer" >
        SELECT * FROM permission where ppid = #{ppid}
    </select>
</mapper>
