<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="swtech.pageDesignControl.mapper.PermissionMapper">
    <select id="getPermissionByRoleName" resultType="swtech.pageDesignControl.entity.Permission" parameterType="java.lang.String">
        SELECT * from role r
        join role_permission rp on rp.rid = r.rid
        join permission p on rp.pid = p.pid
        where r.rname =  #{roleName}
    </select>

    <select id="selecGtrandfather" resultType="swtech.pageDesignControl.common.vo.PermissionVO">
        SELECT * FROM permission where ppid = -1
    </select>

    <select id="selectChild" resultType="swtech.pageDesignControl.common.vo.PermissionVO"
            parameterType="java.lang.Integer">
        SELECT * FROM permission where ppid = #{ppid}
    </select>
</mapper>
